<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".New_poll.NewChoiceActivity"
    tools:layout_editor_absoluteY="81dp">


    <EditText
        android:id="@+id/TitleChoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Enter the title of your choice"
        android:inputType="textPersonName"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Consigne" />

    <TextView
        android:id="@+id/TextOrPicture2"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:text="@string/TypeChoice"
        app:layout_constraintBottom_toTopOf="@+id/SecondChoiceImage"
        app:layout_constraintStart_toStartOf="@+id/Retour"
        app:layout_constraintTop_toBottomOf="@+id/SecondChoice" />

    <EditText
        android:id="@+id/TitleSecondChoice"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Enter the second proposition"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/TitleFirstChoice"
        app:layout_constraintTop_toBottomOf="@+id/TextOrPicture2" />

    <EditText
        android:id="@+id/TitleFirstChoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="38dp"
        android:layout_marginEnd="39dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Enter the first proposition"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/SecondChoice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/FirstChoiceImage"
        app:layout_constraintTop_toBottomOf="@+id/TextOrPicture" />

    <EditText
        android:id="@+id/QuestionChoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="95dp"
        android:ems="10"
        android:hint="Enter your question"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/FirstChoice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Consigne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/createSondage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Retour" />

    <Button
        android:id="@+id/Retour"
        android:layout_width="46dp"
        android:layout_height="0dp"
        android:layout_marginBottom="146dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/left_arrow"
        android:onClick="retour"
        app:layout_constraintBottom_toTopOf="@+id/FirstChoiceImage"
        app:layout_constraintEnd_toStartOf="@+id/Consigne"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/FirstChoice"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="348dp"
        android:layout_marginTop="8dp"
        android:text="@string/Choix1"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/Retour"
        app:layout_constraintTop_toBottomOf="@+id/QuestionChoice" />

    <TextView
        android:id="@+id/SecondChoice"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="32dp"
        android:text="@string/Choix2"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/TextOrPicture2"
        app:layout_constraintStart_toStartOf="@+id/Retour"
        app:layout_constraintTop_toBottomOf="@+id/FirstChoiceImage" />

    <TextView
        android:id="@+id/TextOrPicture"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginBottom="32dp"
        android:text="@string/TypeChoice"
        app:layout_constraintBottom_toTopOf="@+id/FirstChoiceImage"
        app:layout_constraintStart_toStartOf="@+id/Retour"
        app:layout_constraintTop_toBottomOf="@+id/FirstChoice"
        tools:text="@string/TypeChoice" />

    <Button
        android:id="@+id/OK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="52dp"
        android:backgroundTint="@color/colorValidation"
        android:onClick="validation"
        android:text="@string/ok"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FirstChoiceImage"
        tools:text="@string/ok" />

    <Button
        android:id="@+id/Previsualisation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="52dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/colorValidation"
        android:text="@string/previsualisation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TitleSecondChoice"
        app:layout_constraintVertical_bias="1.0"
        tools:text="@string/previsualisation" />

    <ImageView
        android:id="@+id/FirstChoiceImage"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:layout_marginBottom="185dp"
        android:layout_marginStart="48dp"
        android:background="@android:drawable/ic_menu_gallery"
        android:onClick="chooseImage"
        app:layout_constraintBottom_toTopOf="@+id/OK"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Retour" />

    <ImageView
        android:id="@+id/SecondChoiceImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="32dp"
        android:background="@android:drawable/ic_menu_gallery"
        android:onClick="chooseImage"
        app:layout_constraintBottom_toTopOf="@+id/OK"
        app:layout_constraintStart_toStartOf="@+id/FirstChoiceImage"
        app:layout_constraintTop_toBottomOf="@+id/TextOrPicture2" />


</android.support.constraint.ConstraintLayout>